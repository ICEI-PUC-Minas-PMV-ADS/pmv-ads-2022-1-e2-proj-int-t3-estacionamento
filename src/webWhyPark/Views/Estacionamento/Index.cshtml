@model IEnumerable<webWhyPark.Models.Estacionamento>
@{
    ViewData["Title"] = "Estacionamentos";

<style scoped>

body {
    background-color: lightgray;
}

.card-deck {
    margin: 20px;
    display: flex;
    justify-content: space-evenly;
     
}
.card {
    padding: 1px 1px;
    border-radius: 20px;
    box-shadow: 0 1px 2px 0;
}

.card-img-top {
    width: 100%;
    height: 80%;
}

.card-title {
    font-weight: 800;
    margin: 0;
    text-align: center;
}

.card-title > a {
    text-decoration: none;
    color: black;
}

.card-title > a:hover {
    background: lightgray;
}

.cart-title > h5 {
    color: black;
}

</style>

}

<body>

<div class="card-deck">
        <div class="card" style="width: 20rem;">
            <img class="card-img-top" src="/../imagens/estacionamento.svg" alt="Imagem de capa do card">
                <div class="card-body">
                    <h4 class="card-title"><a asp-action="Create">Cadastre seu estacionamento!</a></h4>
                </div>
        </div>

        <div class="card">
            <img class="card-img-top" src="/../imagens/entrarEstacionamento.svg" alt="Imagem de capa do card">
                <div class="card-body">
                    <h4 class="card-title"><a asp-action="#">Entre na sua conta</a></h4>
                </div>
        </div>
</div>

</body>
