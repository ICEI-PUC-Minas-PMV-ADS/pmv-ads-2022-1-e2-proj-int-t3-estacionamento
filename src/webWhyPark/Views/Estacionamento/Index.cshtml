@model IEnumerable<webWhyPark.Models.Estacionamento>
@{
    ViewData["Title"] = "Estacionamentos";

<style scoped>

body {
    background-color: lightgray;
}

.card-deck {
    margin: 20px;
    display: flex;
    justify-content: space-evenly;
     
}
.card {
    padding: 1px 1px;
    border-radius: 20px;
    box-shadow: 0 1px 2px 0;
}

.card-img-top {
    width: 100%;
    height: 80%;
}

.card-title {
    font-weight: 800;
    margin: 0;
    text-align: center;
}

.card-title > a {
    text-decoration: none;
    color: black;
}

.card-title > a:hover {
    background: lightgray;
}

.cart-title > h5 {
    color: black;
}





</style>

}

<body>

<div class="card-deck">
        <div class="card" style="width: 20rem;">
            <img class="card-img-top" src="/../imagens/estacionamento.svg" alt="Imagem de capa do card">
                <div class="card-body">
                    <h4 class="card-title"><a asp-action="Create">Cadastre seu estacionamento!</a></h4>
                </div>
        </div>

        <div class="card">
            <img class="card-img-top" src="/../imagens/entrarEstacionamento.svg" alt="Imagem de capa do card">
                <div class="card-body">
                    <h4 class="card-title"><a asp-action="#">Entre na sua conta</a></h4>
                </div>
        </div>
</div>

</body>
<br>
<br>
<div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model=>model.RazaoSocial)
                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.CNPJ)

                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.Telefone)

                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.Email)

                </th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem=>item.RazaoSocial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem=>item.CNPJ)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem=>item.Telefone)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem=>item.Email)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
