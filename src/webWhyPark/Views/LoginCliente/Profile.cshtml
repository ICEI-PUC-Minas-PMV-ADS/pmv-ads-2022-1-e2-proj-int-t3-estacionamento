@model IEnumerable<webWhyPark.Models.Cliente>

@{
    ViewData["Title"] = "Perfil do Cliente";

<style scoped>

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --gray: rgb(209, 205, 205);
    --darkgray: rgb(63, 60, 60);
    --lightgray: rgb(245, 245, 245);
}

body {
    min-height: 100vh;
    overflow-x: hidden;
}

.container {
    position: relative;
    width: 100%;
}

.navigation {
    position: fixed;
    width: 300px;
    height: 100%;
    background: var(--gray);
    border-left: 10px solid var(--gray);
    transition: 0.5s;
    overflow: hidden;
}

.navigation ul {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}

.navigation ul li {
    position: relative;
    width: 100%;
    list-style: none;
    border-top-left-radius: 30px;
    border-bottom-left-radius: 30px;
}

.navigation ul li:hover,
.navigation ul li.hovered {
    background: var(--lightgray);
}

.navigation ul li:nth-child(1) {
    margin-bottom: 40px;
    pointer-events: none;
}

.navigation ul li a {
    position: relative;
    display: block;
    width: 100%;
    display: flex;
    text-decoration: none;
    color: var(--darkgray);
}

.navigation ul li:hover a
.navigation ul li.hovered a {
    color: var(--gray);
}

.navigation ul li a .icon {
    position: relative;
    display: block;
    min-width: 60px;
    height: 60px;
    line-height: 75px;
    text-align: center;
}

.navigation ul li a .icon ion-icon {
    font-size: 1.75em;
}

.navigation ul li a .title {
    position: relative;
    display: block;
    padding: 0 10px;
    height: 60px;
    line-height: 60px;
    text-align: start;
    white-space: nowrap;
    font-weight: 500;
}

@* Curva para o alto *@
.navigation ul li:hover a::before,
.navigation ul li.hovered a::before {
    content: '';
    position: absolute;
    right: 0;
    top: -50px;
    width: 50px;
    height: 50px;
    background: transparent;
    border-radius: 50%;
    box-shadow: 35px 35px 0 10px var(--lightgray);
    pointer-events: none;
}
@* Curva para baixo *@
.navigation ul li:hover a::after,
.navigation ul li.hovered a::after {
    content: '';
    position: absolute;
    right: 0;
    bottom: -50px;
    width: 50px;
    height: 50px;
    background: transparent;
    border-radius: 50%;
    box-shadow: 35px -35px 0 10px var(--lightgray);
    pointer-events: none;
}



</style>
}

<body>

<div class="container">
    <div class="navigation">
        <ul>
            <li>
                <a href="#">
                    <span class="icon"><ion-icon name="person-circle-outline"></ion-icon></span>
                    <span class="title">Nome do Cliente</span>
                </a>
            </li>
             <li>
                <a href="#">
                    <span class="icon"><ion-icon name="file-tray-full-outline"></ion-icon></span>
                    <span class="title">Histórico</span>
                </a>
            </li>
             <li>
                <a href="#">
                    <span class="icon"><ion-icon name="star-outline"></ion-icon></span>
                    <span class="title">Favoritos</span>
                </a>
            </li>
             <li>
                <a href="#">
                    <span class="icon"><ion-icon name="mail-outline"></ion-icon></span>
                    <span class="title">Mensagens</span>
                </a>
            </li>
             <li>
                <a href="#">
                    <span class="icon"><ion-icon name="information-circle-outline"></ion-icon></span>
                    <span class="title">Ajuda</span>
                </a>
            </li>
             <li>
                <a href="#">
                    <span class="icon"><ion-icon name="settings-outline"></ion-icon></span>
                    <span class="title">Gerenciar conta</span>
                </a>
            </li>
             <li>
                <a href="#">
                    <span class="icon"><ion-icon name="log-out-outline"></ion-icon></span>
                    <a span class="title" asp-action="Logout">Sair</a></span>
                </a>
            </li>
        </ul>
    </div>




    
</div>


@*Ícones*@
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

<script>
    @* Adicionando "hovered" class quando um item da lista é selecionado *@
    let list = document.querySelectorAll('.navigation li');
    function activeLink () {
        list.forEach((item) => 
        item.classList.remove('hovered'));
        
        this.classList.add('hovered');
    }
    list.forEach((item) =>
    item.addEventListener('mouseover', activeLink));


</script>

</body>

